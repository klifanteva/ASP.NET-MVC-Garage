@model IEnumerable<WebApplication22.Models.repairs_logbook>

@{
    ViewBag.Title = "Журнал Ремонтов";
}

<h2>Список записей в Журнале Ремонтов</h2>

<p>
    @Html.ActionLink("Добавить запись", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.cars_number)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.repairs.type_rep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_time_rep)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cars_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.repairs.type_rep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_time_rep)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.idrepair_logbook }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.idrepair_logbook }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.idrepair_logbook })
        </td>
    </tr>
}

</table>
